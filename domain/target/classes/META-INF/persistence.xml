<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="Customers to DB via JPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>de.openknowledge.Client</class>
        
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/servletDB"/>
<!--            <property name="javax.persistence.jdbc.driver" value=""/>-->
            <property name="javax.persistence.jdbc.user" value="ServletUser"/>
            <property name="javax.persistence.jdbc.password" value="ForkIt"/>

<!--            <property name="hibernate.dialect" value=""/>-->
<!--            <property name="hibernate.show_sql" value="true"/>-->
<!--            <property name="hibernate.format_sql" value="true"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>